<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.6;netstandard2.0;net45;net46;net47;netcoreapp2.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.0.0</Version>
    <Description>Chance.NET randomness generator</Description>
    <Authors>G. Mantaos</Authors>
    <PackageProjectUrl>https://github.com/gmantaos/Chance.NET</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/gmantaos/Chance.NET/master/assets/icon.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/gmantaos/Chance.NET/blob/master/LICENSE.md</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/gmantaos/Chance.NET</RepositoryUrl>
    <PackageTags>chance rng random generate randomness seed testing tests unit generator pseudo</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
	  <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Chance.NET.xml</DocumentationFile>
  </PropertyGroup>

</Project>
